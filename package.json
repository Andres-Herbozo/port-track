{
  "name": "porttrack-platform",
  "version": "1.0.0",
  "description": "PortTrack - Plataforma de Navegación Portuaria con Despliegue Continuo y Monitoreo",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "docker build -t porttrack-platform .",
    "build:dev": "docker build --target development -t porttrack-platform:dev .",
    "deploy:staging": "kubectl apply -f k8s/staging/",
    "deploy:production": "kubectl apply -f k8s/production/",
    "monitor": "node scripts/monitor-metrics.js",
    "security:scan": "trivy fs .",
    "security:test": "npm audit && npm run security:scan",
    "docs:generate": "jsdoc -c jsdoc.json",
    "docs:serve": "http-server docs/ -p 8080"
  },
  "keywords": [
    "porttrack",
    "portuaria",
    "navegación",
    "devops",
    "kubernetes",
    "monitoreo",
    "chatops",
    "ci-cd"
  ],
  "author": "PortTrack Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/porttrack/platform.git"
  },
  "bugs": {
    "url": "https://github.com/porttrack/platform/issues"
  },
  "homepage": "https://porttrack.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "prom-client": "^14.2.0",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "elasticsearch": "^16.7.3",
    "axios": "^1.6.2",
    "moment": "^2.29.4",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jsdoc": "^4.0.2",
    "http-server": "^14.1.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "rules": {
      "indent": ["error", 2],
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
