# PortTrack Environment Variables

# Application
NODE_ENV=development
APP_NAME=PortTrack
APP_VERSION=1.0.0
PORT=3000
METRICS_PORT=9090
HEALTH_PORT=8080

# Database
DB_HOST=porttrack-postgresql
DB_PORT=5432
DB_NAME=porttrack_dev
DB_USER=porttrack_user
DB_PASSWORD=porttrack_password

# Redis
REDIS_HOST=porttrack-redis
REDIS_PORT=6379
REDIS_PASSWORD=porttrack_redis_password

# MongoDB
MONGO_HOST=porttrack-mongodb
MONGO_PORT=27017
MONGO_DB=porttrack_nosql
MONGO_USER=porttrack_admin
MONGO_PASSWORD=porttrack_mongo_password

# Elasticsearch
ELASTICSEARCH_HOST=porttrack-elasticsearch
ELASTICSEARCH_PORT=9200

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.porttrack.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#porttrack-alerts

# Monitoring
PROMETHEUS_URL=http://porttrack-prometheus:9090
GRAFANA_URL=http://porttrack-grafana:3000
KIBANA_URL=http://porttrack-kibana:5601

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security
JWT_SECRET=your-super-secret-jwt-key
SESSION_SECRET=your-super-secret-session-key
BCRYPT_ROUNDS=12

# AWS API Gateway
AWS_REGION=us-east-1
AWS_API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev
AWS_API_KEY=your-aws-api-key
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
